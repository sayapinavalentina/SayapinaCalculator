<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".MainActivity"
    android:background="@color/bluebackground">

    <TextView
        android:id="@+id/tv_result_label"
        android:layout_width="match_parent"
        android:layout_height="150dp"
        android:textColor="@color/whitetext"
        android:textSize="48sp"
        android:gravity="center_vertical|right"
        android:text="0"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />
<GridLayout
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    app:layout_constraintTop_toBottomOf="@id/tv_result_label"
    app:layout_constraintBottom_toBottomOf="parent"
    app:layout_constraintEnd_toEndOf="parent"
    app:layout_constraintStart_toStartOf="parent"
    android:columnCount="4"
    android:layout_marginTop="50dp">

    <Button
        android:layout_width="72dp"
        android:layout_height="72dp"
        android:layout_margin="10dp"
        android:background="@color/yellowbutton"
        android:onClick="inputNumber"
        android:text="7"
        android:textColor="@color/whitetext"
        android:textSize="20sp" />

    <Button
        android:layout_width="72dp"
        android:layout_height="72dp"
        android:layout_margin="10dp"
        android:background="@color/yellowbutton"
        android:onClick="inputNumber"
        android:text="8"
        android:textColor="@color/whitetext"
        android:textSize="20sp" />

    <Button
        android:layout_width="72dp"
        android:layout_height="72dp"
        android:layout_margin="10dp"
        android:background="@color/yellowbutton"
        android:onClick="inputNumber"
        android:text="9"
        android:textColor="@color/whitetext"
        android:textSize="20sp" />

    <Button
        android:layout_width="72dp"
        android:layout_height="72dp"
        android:layout_margin="10dp"
        android:background="@color/orangebutton"
        android:onClick="inputOperand"
        android:text="+"
        android:textColor="@color/blacktext"
        android:textSize="20sp" />

    <Button
        android:layout_width="72dp"
        android:layout_height="72dp"
        android:layout_margin="10dp"
        android:background="@color/yellowbutton"
        android:onClick="inputNumber"
        android:text="4"
        android:textColor="@color/whitetext"
        android:textSize="20sp" />

    <Button
        android:layout_width="72dp"
        android:layout_height="72dp"
        android:layout_margin="10dp"
        android:background="@color/yellowbutton"
        android:onClick="inputNumber"
        android:text="5"
        android:textColor="@color/whitetext"
        android:textSize="20sp" />

    <Button
        android:layout_width="72dp"
        android:layout_height="72dp"
        android:layout_margin="10dp"
        android:background="@color/yellowbutton"
        android:onClick="inputNumber"
        android:text="6"
        android:textColor="@color/whitetext"
        android:textSize="20sp" />

    <Button
        android:layout_width="72dp"
        android:layout_height="72dp"
        android:layout_margin="10dp"
        android:background="@color/orangebutton"
        android:onClick="inputOperand"
        android:text="-"
        android:textColor="@color/blacktext"
        android:textSize="20sp" />

    <Button
        android:layout_width="72dp"
        android:layout_height="72dp"
        android:layout_margin="10dp"
        android:background="@color/yellowbutton"
        android:onClick="inputNumber"
        android:text="1"
        android:textColor="@color/whitetext"
        android:textSize="20sp" />

    <Button
        android:layout_width="72dp"
        android:layout_height="72dp"
        android:layout_margin="10dp"
        android:background="@color/yellowbutton"
        android:onClick="inputNumber"
        android:text="2"
        android:textColor="@color/whitetext"
        android:textSize="20sp" />

    <Button
        android:layout_width="72dp"
        android:layout_height="72dp"
        android:layout_margin="10dp"
        android:background="@color/yellowbutton"
        android:onClick="inputNumber"
        android:text="3"
        android:textColor="@color/whitetext"
        android:textSize="20sp" />

    <Button
        android:layout_width="72dp"
        android:layout_height="72dp"
        android:layout_margin="10dp"
        android:background="@color/orangebutton"
        android:onClick="inputOperand"
        android:text="*"
        android:textColor="@color/blacktext"
        android:textSize="20sp" />

    <Button
        android:layout_width="72dp"
        android:layout_height="72dp"
        android:layout_margin="10dp"
        android:background="@color/redbutton"
        android:onClick="clearAction"
        android:text="AC"
        android:textColor="@color/whitetext"
        android:textSize="20sp" />

    <Button
        android:layout_width="72dp"
        android:layout_height="72dp"
        android:layout_margin="10dp"
        android:background="@color/yellowbutton"
        android:onClick="inputNumber"
        android:text="0"
        android:textColor="@color/whitetext"
        android:textSize="20sp" />

    <Button
        android:layout_width="72dp"
        android:layout_height="72dp"
        android:layout_margin="10dp"
        android:background="@color/orangebutton"
        android:onClick="resultAction"
        android:text="="
        android:textColor="@color/blacktext"
        android:textSize="20sp" />

    <Button
        android:layout_width="72dp"
        android:layout_height="72dp"
        android:layout_margin="10dp"
        android:background="@color/orangebutton"
        android:onClick="inputOperand"
        android:text="/"
        android:textColor="@color/blacktext"
        android:textSize="20sp" />
</GridLayout>
</androidx.constraintlayout.widget.ConstraintLayout>